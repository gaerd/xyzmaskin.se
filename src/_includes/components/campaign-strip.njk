{% if campaign.active %}
<div class="bg-brand text-white">
  <div class="max-w-6xl mx-auto flex flex-col gap-3 px-4 py-3 text-sm sm:flex-row sm:items-center sm:justify-between">
    <div class="font-medium tracking-tight text-center sm:text-left">{{ campaign.text }}</div>
    {% if campaign.linkUrl %}
    <a class="inline-flex items-center justify-center gap-2 rounded-full bg-white px-4 py-2 font-semibold text-brand transition hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-brand focus:ring-white" href="{{ campaign.linkUrl }}">
      {{ campaign.linkText }}
    </a>
    {% endif %}
  </div>
</div>
{% endif %}
