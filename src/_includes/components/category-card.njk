{% macro card(item) %}
<article class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm transition duration-300 hover:-translate-y-1 hover:shadow-lg">
  <img src="{{ item.image }}" alt="{{ item.title }}" loading="lazy"
       class="h-56 w-full object-cover transition duration-300 group-hover:scale-[1.02]" />
  <div class="flex flex-1 flex-col p-5">
    <h3 class="text-xl font-semibold text-slate-900">{{ item.title }}</h3>
    <div class="mt-4">
      <a href="{{ item.url }}"
         class="inline-flex items-center gap-2 text-sm font-semibold text-brand transition hover:text-brand-dark"
         aria-label="Till {{ item.title }}">
        Till kategori
        <span aria-hidden="true">â†’</span>
      </a>
    </div>
  </div>
</article>
{% endmacro %}
