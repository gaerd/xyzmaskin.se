{% macro card(item) %}
<article class="group relative overflow-hidden rounded-2xl shadow-lg">
  <img src="{{ item.image }}" alt="{{ item.title }}" loading="lazy"
       class="h-72 w-full object-cover transition duration-500 group-hover:scale-105" />
  <div class="absolute inset-0 bg-gradient-to-r from-slate-900/70 via-slate-900/50 to-slate-900/30 transition duration-500 group-hover:from-slate-900/80 group-hover:to-slate-900/40"></div>
  <div class="absolute inset-0 flex flex-col items-start justify-end p-6 md:p-8 gap-3">
    <h3 class="text-2xl font-semibold uppercase tracking-wide text-white drop-shadow">{{ item.title }}</h3>
    <a href="{{ item.url }}"
       class="inline-flex items-center justify-center gap-2 rounded-full bg-white/90 px-5 py-2 text-sm font-semibold text-brand shadow-sm transition hover:bg-white"
       aria-label="Till {{ item.title }}">
      LÃ¤s mer
      <span aria-hidden="true">&rarr;</span>
    </a>
  </div>
</article>
{% endmacro %}
